<div class="panel panel-default">
  <div class="panel-heading">
    <h4><%= t('.fleet', :default => "New Fleet") %></h4>
  </div>
  <div class="panel-body">
    <%= form_for(:fleet, url: fleets_path, html: { role: "form" }) do |f| %>
      <div class="form-group">
        <%= f.label :fc_name %>
        <%= f.text_field :fc_name, autofocus: true, class: "form-control", :required => true %>
      </div>
      <div class="form-group">
        <%= f.label :fleet_name %>
        <%= f.text_field :fleet_name, autofocus: true, class: "form-control", :required => true %>
      </div>
      <div class="form-group">
        <%= f.label :fleet_time %>
        <%= f.text_field :fleet_time, autofocus: true, class: "form-control time", :'data-inputmask'=>"'mask': '99:99'", :required => true %>
      </div>
      <div class="form-group">
        <%= f.label :fleet_coms %>
        <%= f.text_field :fleet_coms, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, autocomplete: "off", class: "form-control" %>
      </div>
      <%= f.submit  t('.fleet', :default => "Create Fleet"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<%= javascript_tag do %>
$(document).ready(function(){
    $(":input").inputmask();
});
<% end %>
