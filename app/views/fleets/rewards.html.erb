<div class="row">
<p>
  <%= bootstrap_form_tag(:method => "get") do |f| %>
    <%= select_month(@month.to_i) %>
    <%= select_year(@year.to_i, start_year: 2014, end_year: Date.today.strftime("%Y").to_i, selected: @year) %>
    <%= f.submit 'Change Month', class: "btn btn-primary" %>
  <% end %>
</p>
</div>
<div class="row">
  <div class="col-md-6">
    <h4>Fleet Rewards</h4>
    <table class="table table-stripped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Corp</th>
          <th>Points</th>
          <th>Reward</th>
        </tr>
      </thead>
      <tbody>
        <% @other_pilot_rewards.each do |r|
          
         %>
          <tr>
            <td><%= r[:name] %></td>
            <td><%= r[:corp_name] %></td>
            <td><%= r[:points] %></td>
            <td><%= number_to_currency(r[:payout]) %></td>
          </tr>
        <% end %>        
      </tbody>
    </table>
  </div>
  <div class="col-md-6">
    <h4>Logistics Rewards</h4>
    <table class="table table-stripped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Corp</th>
          <th>Points</th>
          <th>Reward</th>
        </tr>
      </thead>
      <tbody>
        <% @logi_pilot_rewards.each do |r|
          
         %>
          <tr>
            <td><%= r[:name] %></td>
            <td><%= r[:corp_name] %></td>
            <td><%= r[:points] %></td>
            <td><%= number_to_currency(r[:payout]) %></td>
          </tr>
        <% end %>        
      </tbody>
    </table>
  </div>
</div>